
@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Home/_testlayout.cshtml";
}

@model  TatilSitesiproje.Models.Siniflar.BlogYorum

<!DOCTYPE HTML>
<html>
<head>
    <title>Personal Blog a Blogging Category Flat Bootstarp  Responsive Website Template | Single :: w3layouts</title>
    <link href="~/web1/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web1/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!--end slider -->
    <!--script-->
    <script type="text/javascript" src="~/web1/js/move-top.js"></script>
    <script type="text/javascript" src="~/web1/js/easing.js"></script>
    <!--/script-->

</head>
<body>
    
    <!---header---->
    <!--/header-->
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                <div class="single-grid">
                    @foreach (var i in Model.deger1)
                    {
                        <h3>@i.Baslik</h3>
                        <br />
                        <img src="@i.BlogImage" class="img-responsive" alt="">

                        <br />
                        <pre style="font-family:Bahnschrift; font-size:larger; background-color:#ece8e8; white-space:pre-wrap; word-break: keep-all">@i.Aciklama</pre>
                    }
                </div>
                <ul class="comment-list">
                    @foreach (var y in Model.deger2)
                    {
                        <li>
                            @if (y.izin == true)
                            {
                                <img src="~/web1/images/avatar.png" class="img-responsive" alt="">
                                <div class="desc">
                                    <p>@y.KullaniciAdi :</p>
                                </div>
                                <p style="margin-bottom:15px;">@y.Yorum</p>
                                <div class="clearfix"></div>
                            }
                        </li>

                    }
                </ul>
                @Html.Action("YorumYazma", "Admin")
            </div>

            <div class="col-md-4 side-content">
                <div class="recent">
                    <h3>RECENT POSTS</h3>
                    <ul>
                        @foreach (var t in Model.deger3)

                        {
                            <li><a href="/Blog/BlogDetay/@t.ID">@t.Baslik</a></li>
                        }
                    </ul>
                </div>
                <div class="clearfix"></div>
                <div class="archives">

                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!---->
    <div class="footer">
        <div class="container">

        </div>
    </div>
</body>
</html>



