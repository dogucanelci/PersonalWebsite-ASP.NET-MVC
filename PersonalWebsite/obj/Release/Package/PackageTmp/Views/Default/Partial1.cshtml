@*Gezilecek 3 yer resimli kısmı*@
@using TatilSitesiproje.Models.Siniflar
@model List<Blog>
<div class="con-bot">

    @foreach (var i in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@i.BlogImage" alt="" style="width:367px; height:160px;" />
            </div>
            <div class="left-text">
                <h4>@i.Baslik</h4>
                <span class="doller">@i.Tarih.ToString("dd.MM.yyyy")</span>
                <p>@i.Aciklama.Substring(0, 70)</p>
                <p><a href="/Blog/BlogDetay/@i.ID"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>
    }
    @Html.Action("Partial2","Default")

    <div class="clear"></div>
</div>