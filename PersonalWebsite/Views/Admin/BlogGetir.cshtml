@model TatilSitesiproje.Models.Siniflar.Blog
@{
    ViewBag.Title = "BlogGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>BlogGetir</h2>
@*herhangi bir post işlemi olunce(button) çalışsın.*@
@using (Html.BeginForm("BlogGuncelle", "Admin", FormMethod.Post))
{

    @Html.LabelFor(x => x.ID) @*sql deki sütun ismini aliyor.*@
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    @Html.LabelFor(x => x.Baslik) @*sql deki sütun ismini aliyor.*@
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control", style = "width: 500px;", cols = 35, @rows = 3 })
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama, 10, 1, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogImage)
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <button class="btn btn-success" style="margin-top:20px;">Güncelle</button>

}

